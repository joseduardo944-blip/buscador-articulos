<body>
  <header>Buscador de Artículos - FastCompany & INC</header>

  <div class="search-bar">
    <select id="revista">
      <option value="fastcompany">FastCompany</option>
      <option value="inc">INC</option>
    </select>

    <select id="tipoBusqueda">
      <option value="subchannel">Subchannel</option>
      <option value="canal">Canal</option>
      <option value="tag">Tag</option>
      <option value="categoria">Categoría</option>
    </select>

    <input type="text" id="busqueda" placeholder="Escribe lo que deseas buscar...">
    <button onclick="buscarArticulos()">Buscar</button>
  </div>

  <div class="results" id="resultados">
    <!-- Resultados aparecerán aquí -->
  </div>

  <script>
    async function buscarArticulos() {
      const revista = document.getElementById("revista").value;
      const tipo = document.getElementById("tipoBusqueda").value;
      const texto = document.getElementById("busqueda").value.trim();
      const resultados = document.getElementById("resultados");

      if (!texto) {
        resultados.innerHTML = `<p>Por favor, escribe algo para buscar.</p>`;
        return;
      }

      resultados.innerHTML = `<p>Buscando artículos reales de <strong>${revista}</strong> relacionados con <strong>${tipo}: '${texto}'</strong>...</p>`;

      const query = `site:${revista}.com ${texto}`;

      try {
        const response = await fetch("https://google.serper.dev/search", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
            "X-API-KEY": "f58a2ac6291cefc98a6609ac8546cc8212dce92c"
          },
          body: JSON.stringify({ q: query })
        });

        const data = await response.json();
        if (!data.organic || data.organic.length === 0) {
          resultados.innerHTML = `<p>No se encontraron artículos.</p>`;
          return;
        }

        resultados.innerHTML = data.organic.map(item => `
          <div class="article">
            <h3><a href="${item.link}" target="_blank">${item.title}</a></h3>
            <p>${item.snippet || ''}</p>
            <p><small>${item.link}</small></p>
          </div>
        `).join("");
      } catch (error) {
        console.error("Error al buscar artículos:", error);
        resultados.innerHTML = `<p>Error al buscar artículos. Intenta de nuevo más tarde.</p>`;
      }
    }
  </script>
</body>
